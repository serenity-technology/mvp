@namespace Share

@inherits Component

@typeparam TValue

@if (_visible)
{
    <div class="fixed z-10 inset-0 top-10">
        <div class="flex items-center justify-center h-screen pt-4 px-4 pb-20 text-center sm:block sm:p-0 ">
            <div class="@Style()"></div>

            <!-- This element is to trick the browser into centering the modal contents. -->
            <span class="hidden sm:inline-block sm:align-middle sm:h-screen">&#8203;</span>

            <div class="inline-block align-bottom bg-white rounded-lg border border-gray-600 text-left overflow-hidden shadow-xl transform transition-all sm:my-8 sm:align-middle sm:max-w-lg sm:w-full">
                <div class="bg-gray-700 px-4 pt-4 pb-4 sm:p-6 sm:pb-4">
                    <div class="sm:flex sm:items-start">
                        <div class="mt-3 text-center sm:mt-0 sm:ml-4 sm:text-left">
                            <h3 class="text-lg leading-6 font-medium text-gray-400" id="modal-title">
                                @_heading
                            </h3>
                            <div class="mt-2">
                                <p class="text-sm text-white max-w-md">@_message</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="bg-gray-800 px-4 py-3 sm:px-6 flex justify-center">
                    <Button Label="Yes" OnClick="@OnClickYes" />
                    <Button Label="No" OnClick="@OnClickNo" Motif="ButtonMotif.Secondary" />

                    @if (AllowCancel)
                    {
                        <Button Label="Cancel" OnClick="@OnClickCancel" Motif="ButtonMotif.Secondary" />
                    }
                </div>
            </div>
        </div>
    </div>
}