@namespace Share

@inherits Component

@typeparam TRowData

<div class="h-full max-h-full bg-gray-800 rounded-lg flex flex-col overflow-hidden">
    <div class="rounded-t-lg bg-gray-700 py-2 pl-2 pr-1 flex">
        <div class="flex-1 uppercase">@Header</div>
        <div style="@ScrollbarWith"></div>
    </div>

    <div class="flex-1 flex flex-col divide-y divide-gray-700 overflow-y-scroll scrollbar-dark" @ref="_bodyElement">
        @foreach (var row in Rows)
        {
            <TableRow TRowData="TRowData" Data="@row">@Body(row)</TableRow>
        }
    </div>

    @if (Footer is not null)
    {
        <div class="rounded-b-lg bg-gray-700 py-2 pl-2 pr-1 flex">
            <div class="flex-1 uppercase">@Footer</div>
            <div style="@ScrollbarWith"></div>
        </div>
    }
</div>